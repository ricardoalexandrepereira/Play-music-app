<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    <title>Music App</title>
  </head>
  <body>

    <nav>
        <ul>
            <li>
                <a id="logo" href="/">pink play</a>
            </li>
            <li>
                <a href="/admin"><i class="bi bi-gear-fill"></i></a>
            </li>
        </ul>
    </nav>

    <section id="player">

        <h1>Playlist</h1>

        <div>
            <img src="/img/imgimg.jpg" id="currentImg" alt="imagem">
            <h2 id="currentName">Titulo</h2>
            <p id="currentArtist">Artista</p>
        </div>

        <div>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th>Artista</th>
                        <th></th>
                    </tr>
                </thead>


                <tbody>

                    <% playlist.forEach((music)=>{ %>
                        <tr class="musics">
                            <td><img src="<%= music.linkImage %>" alt="link da mÃºsica"></td>
                            <td>
                                <%= music.name %>
                            </td>
                            <td>
                                <%= music.author %>
                            </td>
                            <td>
                                <audio class="audio" src="<%= music.linkMusic %>"></audio>
                           
                        </tr>
                    <% }) %>
                </tbody>


            </table>
        </div>

    </section>


    <section id="controls">
        <i id="prev-control" class="bi bi-skip-start-fill"></i>
        <i id="play-control" class="bi bi-play-fill"></i>
        <i id="next-control" class="bi bi-skip-end-fill"></i>

        <span id="current-duration">00:00</span>
        <input id="progressbar" type="range" min="0" max="0" step="1">
        <span id="total-duration">00:00</span>

        <i id="vol-icon" class="bi bi-volume-up-fill"></i>
        <input id="volume" type="range" min="0" max="100" step="1">


    </section>
    <script src="/script.js"></script>
  </body>
</html>
